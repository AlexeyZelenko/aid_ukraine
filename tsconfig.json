{
  "files": [],
  "references": [{ "path": "./tsconfig.node.json" }],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.svelte", "src/**/*.astro"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
      "composite": true,            // This must be true
      "module": "ESNext",
      "moduleResolution": "bundler",
      "types": ["node"],
      "lib": ["ESNext"], // Or ["ESNext", "DOM"] if needed for Vite config specifically
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "isolatedModules": true
      // No "noEmit": true here!
    }
}
